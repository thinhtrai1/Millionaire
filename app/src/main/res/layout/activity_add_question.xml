<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuestionManageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/background_listview"
            android:text="LV" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_weight="4"
            android:background="@drawable/background_listview"
            android:gravity="center"
            android:text="QUESION" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/background_listview"
            android:text="A" />

        <TextView
            android:layout_width="0dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/background_listview"
            android:text="B" />

        <TextView
            android:layout_width="0dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/background_listview"
            android:text="C" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/background_listview"
            android:text="D" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/background_listview"
            android:text="âœ”" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lv_question"
        android:choiceMode="singleChoice"
        android:listSelector="#d5d5d5"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/level_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Level"
            android:inputType="number"
            android:maxLength="1"
            android:paddingVertical="7dp" />

        <EditText
            android:id="@+id/question_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question"
            android:maxLines="1"
            android:paddingVertical="7dp" />

        <EditText
            android:id="@+id/a_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="A Select"
            android:maxLines="1"
            android:paddingVertical="7dp" />

        <EditText
            android:id="@+id/b_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="B Select"
            android:maxLines="1"
            android:paddingVertical="7dp" />

        <EditText
            android:id="@+id/c_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="C Select"
            android:maxLines="1"
            android:paddingVertical="7dp" />

        <EditText
            android:id="@+id/d_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="D Select"
            android:maxLines="1"
            android:paddingVertical="7dp" />

        <EditText
            android:id="@+id/true_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Right Select"
            android:maxLength="1"
            android:paddingVertical="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ADD" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="delete" />

            <Button
                android:id="@+id/update_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="update" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>